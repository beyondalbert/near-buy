<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">用户反馈</h3>
  </div>
  <div class="panel-body">
    <%= form_for @feedback, html: { class: "form-horizontal", role: "form", multipart: true } do |f| %>
      <% if @feedback.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <ul>
            <% @feedback.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <label for="feedback_name", class="col-sm-2 control-label"><%= f.label :name %></label>
        <div class="col-sm-4">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label for="feedback_email", class="col-sm-2 control-label"><%= f.label :email %></label>
        <div class="col-sm-4">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label for="feedback_content", class="col-sm-2 control-label"><%= f.label :content %></label>
        <div class="col-sm-7">
          <%= f.text_area :content, rows: 10, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-7">
          <%= f.submit '提交', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div><!--/span-->
