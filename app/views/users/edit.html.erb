<div class="row row-offcanvas row-offcanvas-right">

  <div class="col-xs-12 col-sm-9">
    <%= form_for @user, html: { class: "form-horizontal", role: "form", multipart: true } do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <label for="item_subject", class="col-sm-2 control-label"><%= f.label :name %></label>
        <div class="col-sm-7">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label for="item_description", class="col-sm-2 control-label"><%= f.label :email %></label>
        <div class="col-sm-7">
          <%= f.text_field :email, disabled: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label for="item_price", class="col-sm-2 control-label"><%= f.label :phone %></label>
        <div class="col-sm-4">
          <%= f.text_field :phone, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label for="item_picture", class="col-sm-2 control-label"><%= f.label :picture %></label>
        <div class="col-sm-4">
          <%= file_field_tag :picture, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-7">
          <%= f.submit '修改', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div><!--/span-->

  <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to "创建物品", new_item_path, class: "btn btn-primary"%>
      </div>
    </div>
    <div class="list-group">
      <a href="#" class="list-group-item active">Link</a>
      <a href="#" class="list-group-item">Link</a>
      <a href="#" class="list-group-item">Link</a>
      <a href="#" class="list-group-item">Link</a>
      <a href="#" class="list-group-item">Link</a>
      <a href="#" class="list-group-item">Link</a>
      <a href="#" class="list-group-item">Link</a>
      <a href="#" class="list-group-item">Link</a>
      <a href="#" class="list-group-item">Link</a>
      <a href="#" class="list-group-item">Link</a>
    </div>
  </div><!--/span-->
</div><!--/row-->
